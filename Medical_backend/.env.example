# ========================================
# SMART HEALTHCARE SYSTEM - Environment Variables
# SE3070 Assignment 02
# ========================================

# Server Configuration
NODE_ENV=development
PORT=5000
FRONTEND_URL=http://localhost:5173

# Database Configuration
# Local MongoDB (for development)
MONGO_URI=mongodb://localhost:27017/healthcare_system

# MongoDB Atlas (for production/cloud)
MONGODB_URI=mongodb+srv://username:password@cluster0.xxxxx.mongodb.net/healthcare_system?retryWrites=true&w=majority&appName=HealthcareApp

# Alternative MongoDB Atlas URI format
# MONGODB_URI=mongodb+srv://username:password@cluster0.xxxxx.mongodb.net/?retryWrites=true&w=majority&appName=HealthcareApp

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=7d
JWT_COOKIE_EXPIRE=7

# Email Service (Nodemailer)
EMAIL_SERVICE=gmail
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_FROM=Smart Healthcare <noreply@healthcare.com>

# Payment Gateway (Example: Stripe)
PAYMENT_GATEWAY_KEY=pk_test_your_stripe_key
PAYMENT_GATEWAY_SECRET=sk_test_your_stripe_secret

# Cloud Storage (AWS S3 / Azure)
CLOUD_STORAGE_BUCKET=healthcare-documents
CLOUD_STORAGE_REGION=ap-south-1
CLOUD_STORAGE_ACCESS_KEY=your_access_key
CLOUD_STORAGE_SECRET_KEY=your_secret_key

# SMS Service (Twilio)
SMS_ACCOUNT_SID=your_twilio_account_sid
SMS_AUTH_TOKEN=your_twilio_auth_token
SMS_PHONE_NUMBER=+1234567890

# Security
BCRYPT_ROUNDS=12
MAX_LOGIN_ATTEMPTS=5
LOCK_TIME=2h

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
CORS_ORIGIN=http://localhost:5173

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log
